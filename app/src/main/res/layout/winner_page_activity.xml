<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/winnerbackgroung">
    <TextView

        android:id="@+id/txtwin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:text="PUZZLE 1 COMPLETED"
        android:textColor="#6200EA"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_175sdp"
        android:layout_below="@id/txtwin"
        android:gravity="center_horizontal"
        android:id="@+id/layout1">

    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="2dp"
        android:background="@drawable/trofy2">

    </ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/cont"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_50sdp"
            android:text="CONTINUE"
            android:textColor="#090B0A"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="italic"
            android:background="@drawable/btnmain"
            android:layout_marginBottom="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/manu"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_50sdp"
            android:text="MAIN MENU"
            android:textColor="#090B0A"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="italic"
            android:background="@drawable/btnmain"
            android:layout_marginBottom="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/buy"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_50sdp"
            android:text="BUY PRO"
            android:textColor="#090B0A"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="italic"
            android:background="@drawable/btnmain"
            android:layout_marginBottom="@dimen/_10sdp"/>

        <TextView


            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:text="SHARE THIS PUZZLE"
            android:textColor="#6200EA"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/share"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:src="@drawable/shareus"
            android:background="@drawable/btnmain"/>



    </LinearLayout>

</RelativeLayout>